{
  "name": "toast5",
  "version": "1.0.0",
  "description": "simple and efficient lightweight toasts for react that are very easy to use",
  "main": "dist/index.js",
  "scripts": {
    "build": "babel src --out-dir dist --extensions .js,.jsx,.ts,.tsx --copy-files && npx -p typescript tsc --declaration --allowJs --emitDeclarationOnly --outDir dist",
    "prepublishOnly": "npm run build",
    "test": "echo \"Error: no test specified\" && exit 1",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/amey-kudari/toast5.git"
  },
  "keywords": [
    "Toast",
    "Toasts",
    "React-Toast",
    "Toast5",
    "toast5",
    "toast"
  ],
  "author": "amey-kudari",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/amey-kudari/toast5/issues"
  },
  "homepage": "https://github.com/amey-kudari/toast5#readme",
  "dependencies": {
    "@babel/cli": "^7.24.1",
    "@babel/preset-env": "^7.24.3",
    "@babel/preset-react": "^7.24.1",
    "@babel/preset-typescript": "^7.24.1",
    "@types/jest": "^29.5.12",
    "@types/node": "^20.11.30"
  },
  "types": "./dist/index.d.ts",
  "devDependencies": {
    "@types/react": "^18.2.73",
    "@types/react-dom": "^18.2.22",
    "typescript": "^5.4.3",
    "@babel/plugin-proposal-private-property-in-object": "^7.21.11"
  }
